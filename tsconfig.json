{
	"compilerOptions": {
		"target": "es5",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"sourceMap": true,
		"outDir": "./dist/",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
