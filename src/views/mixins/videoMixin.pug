mixin videoMixin(video)
    div 
        h2 
            a(href=`/video/${video.id}`) #{video.title.toUpperCase()} || 
                span #{video.contentsForm.toUpperCase()}
        ul
            li
                div
                    p 설명
                    p=video.description
            li
                div
                    p Tags <br/>
                        if video.hashTags !== null
                            each tags in video.hashTags
                                span=tags
                        else
                            small 해쉬태그 없음
                    p Created  <br/>
                        small=video.createAt.toLocaleString()