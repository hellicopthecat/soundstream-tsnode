extends ../layout/layout
block contents 
    div 
        h2 비밀번호변경
        if errorMsg 
            p=errorMsg
        form(method="POST")
            legent(hidden) 비밀번호 변경
            div 
                label(for="oldPassword") 이전 비밀번호
                input#oldPassword(type="text" name='oldPassword'  placeholder="이전 비밀번호")
            div 
                label(for="newPassword") 새 비밀번호
                input#newPassword(type="text" name='newPassword'  placeholder="새 비밀번호")
            div 
                label(for="checkPassword") 비밀번호 확인
                input#checkPassword(type="text" name='checkPassword' placeholder="비밀번호 확인")
            button(type="submit") 변경
            a(href='/') 취소