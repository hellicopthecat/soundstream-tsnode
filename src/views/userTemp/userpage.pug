extends ../layout/layout
include ../mixins/videoMixin
block contents 
    div
        div
            h2 #{user.username}님의 마이페이지
            if loggedUser.avatarUrl === ""
                div(style="background: red; width:100px; height:100px; border-radius:100%" )
            else
                img(src=`/${loggedUser.avatarUrl}`, alt="avatarImg" width="100px" height="100px")
        div
            a(href='/users/mypage/edit') 회원정보 수정
        div
            each video in user.videos
                +videoMixin(video)
            else 
                p 업로드한 컨텐츠가 없습니다.